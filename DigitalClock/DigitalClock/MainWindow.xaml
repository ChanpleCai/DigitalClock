<Window x:Class="DigitalClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DigitalClock" Height="30" Width="90" ShowInTaskbar="False" IsTabStop="False" Topmost="True" 
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}">
    <Grid>
        <TextBlock Text="{Binding Time}" FontFamily="Consolas" FontSize="24" Foreground="White" Opacity="0.9">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="0"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
